{
  "name": "pmitg-monorepo",
  "version": "1.0.0",
  "description": "PmitG - Pudding mit Gabel Meetup Platform Monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../apps/backend && npm install",
    "clean": "rm -rf frontend/.next apps/backend/dist",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oViqa/global-hackathon-v1.git"
  },
  "keywords": [
    "pudding",
    "meetup",
    "social",
    "location-based",
    "monorepo"
  ],
  "author": "Viqa",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^6.20.0"
  }
}
